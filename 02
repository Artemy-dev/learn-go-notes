func calculateIMT(height, weight float64) float64 {
    return weight / math.Pow(height, 2)
}

func getResult(index float64) {
    res := fmt.Sprintf("–ò–Ω–¥–µ–∫—Å –º–∞—Å—Å—ã —Ç–µ–ª–∞: %.2f", index)
    fmt.Print(res)
}
```

